# CHRONICbot Configuration
# Copy to /opt/chronicbot/.env and fill in your values.

# Database (local PostgreSQL via Unix socket)
DATABASE_BACKEND=postgres
DATABASE_URL=postgres:///chronicbot

# LLM Backend
LLM_BACKEND=anthropic
ANTHROPIC_API_KEY=sk-ant-...

# Model
SELECTED_MODEL=claude-sonnet-4-20250514

# Channels
CLI_ENABLED=true
GATEWAY_ENABLED=true
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8080

# Telegram (optional â€” remove if not using)
TELEGRAM_BOT_TOKEN=1234567890:AAF...

# Agent
AGENT_NAME=chronicbot

# Logging
RUST_LOG=ironclaw=info,tower_http=info

# Features
HEARTBEAT_ENABLED=true
SANDBOX_ENABLED=false
EMBEDDING_ENABLED=false
